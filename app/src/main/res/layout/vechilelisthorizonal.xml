<androidx.cardview.widget.CardView
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    android:background="@drawable/backround"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="80"
            android:id="@+id/primery"
            android:background="@drawable/oval"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightgreen"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="primary"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                >

            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="20"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/text"
            android:layout_marginLeft="240dp"
            android:padding="5dp"
            android:textSize="20dp"
            android:textColor="#7000"
            >

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:weightSum="100"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:src="@drawable/bike1"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="20dp"
                    android:src="@drawable/bickicon"></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Pulsar 150"
                    android:id="@+id/model"
                    android:layout_weight="80"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="TN2460549595"
                android:textSize="15dp"
                android:id="@+id/number"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Arivukani"
                android:id="@+id/name"
                android:textSize="15dp"
                android:textColor="#7000"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>

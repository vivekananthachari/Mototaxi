<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".signup.Otpscreen">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#37000000"
        android:weightSum="100"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:id="@+id/imgback"
                android:layout_margin="10dp"
                app:tint="#7000">



            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFY DETAILS"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP send to"
                    android:textSize="13dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP send to"
                    android:textSize="15dp"
                    android:id="@+id/phonenubernew"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mobilenew"></ImageView>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/Enterotp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:textColor="#7000"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpET1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:outlineSpotShadowColor="@color/black"
            android:maxLength="1"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpET2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:backgroundTint="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpET3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:inputType="number"
            android:textColor="@color/black"
            android:maxLength="1"
            android:outlineSpotShadowColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otpET4"
            android:layout_width="50dp"
            android:backgroundTint="@color/black"
            android:layout_height="50dp"
            android:outlineSpotShadowColor="@color/black"
            android:inputType="number"
            android:textColor="@color/black"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_marginTop="50dp"
    android:layout_gravity="right"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.27"
        android:textSize="14dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:id="@+id/val"
        android:layout_marginTop="50dp"
        android:textColor="#7000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify over the call"
        android:textSize="13dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:id="@+id/vetu"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:textColor="#7000"
        />

</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:outlineSpotShadowColor="#002060"
        android:shadowColor="#002060"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:id="@+id/enterotp"
        android:layout_gravity="center"
        android:text="Enter OTP"></Button>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".historydata.history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="WORK"
                android:textSize="30dp"
                android:layout_weight="80"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="10dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:background="#25000000">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:weightSum="100"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_margin="5dp"
                android:background="@drawable/bordernew"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pickup / Drop"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="70"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    app:showText="true"
                    android:layout_weight="20"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:checked="true"
                    app:switchTextAppearance="@style/MyStyle"
                    android:textColor="@color/black"
                    app:track="@drawable/custom_tracknew"
                    android:thumb="@drawable/custom_thumbnew"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/checkup"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="General Check up"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/checkup"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/oil_service"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Scheduled oil service"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/oil"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/washing"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Washing"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/oil"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mydown"
                    android:layout_weight="30">

                </ImageView>

            </LinearLayout>

            <GridView
                android:id="@+id/idGVcourses"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:layout_weight="8"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:layout_margin="2dp"
                android:verticalSpacing="6dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/tyre"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tyre / Wheel Work"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/oil"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mydown"
                    android:layout_weight="30">

                </ImageView>

            </LinearLayout>

            <GridView
                android:id="@+id/tyrelist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:layout_weight="8"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:layout_margin="2dp"
                android:verticalSpacing="6dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/rapire"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Repair"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/oil"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mydown"
                    android:layout_weight="30">

                </ImageView>

            </LinearLayout>

            <GridView
                android:id="@+id/repairlist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:layout_weight="18"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:layout_margin="2dp"
                android:verticalSpacing="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/vech"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Select Vehicle Type"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/oil"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mydown"
                    android:layout_weight="30">

                </ImageView>

            </LinearLayout>

            <GridView
                android:id="@+id/vechlist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:layout_weight="8"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:layout_margin="2dp"
                android:verticalSpacing="6dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:weightSum="100"
                android:layout_marginLeft="5dp"
                android:id="@+id/bodyshop"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordernewdta"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bodyshop Work"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/oil"
                    android:layout_weight="70"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mydown"
                    android:layout_weight="30">

                </ImageView>

            </LinearLayout>

            <GridView
                android:id="@+id/bodyshoplisy"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:layout_weight="8"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:layout_margin="2dp"
                android:verticalSpacing="6dp" />


            <Button
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:padding="10dp"
                android:outlineSpotShadowColor="#002060"
                android:shadowColor="#002060"
                android:textColor="@color/white"
                android:id="@+id/save"
                android:layout_gravity="center"
                android:text="CONFORM"></Button>



        </LinearLayout>



        '



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#32000000"></LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:clickable="true"
            style="@style/MyBottomNavigationView"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_navigation_menu"
            app:itemIconSize="40dp"
            android:background="@color/white"
            app:itemTextColor="#7000"/>

    </LinearLayout>


</RelativeLayout>
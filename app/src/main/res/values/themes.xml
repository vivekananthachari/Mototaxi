<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Motoservice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:state_pressed">@color/purple_500</item>

    </style>
    <style name="BottomNavigationView1" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:state_pressed">@color/black</item>

    </style>
    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@color/purple_500</item>
        <item name="itemTextAppearanceInactive">@color/black</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar" >
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>
    <style name="AppTheme.Dark" parent="@android:style/Theme.DeviceDefault" >
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>
</resources>